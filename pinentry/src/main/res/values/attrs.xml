<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PinEntryView">
        <!-- The number of digits in the pin -->
        <attr name="PEVnumDigits" format="integer" />
        <!-- Digit dimensions, default 50dp x 50dp -->
        <attr name="PEVdigitWidth" format="dimension" />
        <attr name="PEVdigitHeight" format="dimension" />
        <!-- Spacing between the pin boxes, default 20dp -->
        <attr name="PEVdigitSpacing" format="dimension" />
        <!-- Digit background, colour or drawable -->
        <attr name="PEVdigitBackground" format="reference|color" />
        <!-- Font size to use for the mask text, default 15sp -->
        <attr name="PEVdigitTextSize" format="dimension" />
        <!-- Colour of the mask text, defaults to theme textColorPrimary -->
        <attr name="PEVdigitTextColor" format="color" />
        <!-- Digit elevation (API 21+ only), default 0dp -->
        <attr name="PEVdigitElevation" format="dimension" />
        <!-- The character to use to mask the input -->
        <attr name="PEVmask" format="string" />
        <!-- Accent color, defaults to theme colorAccent -->
        <attr name="PEVpinAccentColor" format="color" />
        <!-- Accent width, default 3dp -->
        <attr name="PEVaccentWidth" format="dimension" />
        <!-- Accent type, default 'character' -->
        <attr name="PEVaccentType" format="enum">
            <enum name="none" value="0" />
            <enum name="all" value="1" />
            <enum name="character" value="2" />
        </attr>
        <!-- Input type -->
        <attr name="PEVpinInputType" format="enum">
            <enum name="text" value="1" />
            <enum name="number" value="2" />
        </attr>
        <!-- Only draw accent when View has focus -->
        <attr name="PEVaccentRequiresFocus" format="boolean" />
    </declare-styleable>
</resources>